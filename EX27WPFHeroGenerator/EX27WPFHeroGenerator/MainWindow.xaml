<Window x:Class="EX27WPFHeroGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX27WPFHeroGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Number of hero names:" HorizontalAlignment="Left" Margin="174,161,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxNumberOfHeroes" HorizontalAlignment="Left" Margin="365,165,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="51"/>
        <ListBox x:Name="lbxHeroNames" HorizontalAlignment="Left" Margin="520,138,0,0" VerticalAlignment="Top" Width="231" Height="260"/>
        <Button x:Name="btnFemaleHeroes" Content="Gernerate Female Names" HorizontalAlignment="Left" Margin="310,248,0,0" VerticalAlignment="Top" Click="btnFemaleHeroes_Click"/>
        <Button x:Name="btnMaleHeroes" Content="Gernerate Male Names" HorizontalAlignment="Left" Margin="310,305,0,0" VerticalAlignment="Top" Click="btnMaleHeroes_Click"/>
        <Button x:Name="btnClear" Content="Clear Names" HorizontalAlignment="Left" Margin="330,361,0,0" VerticalAlignment="Top" Click="btnClear_Click"/>


    </Grid>
</Window>
